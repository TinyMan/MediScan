<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="1dp">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_rowSpan="20"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="15dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="false"
                    android:src="@mipmap/ic_launcher_round"></ImageView>

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="false"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_marginBottom="15dp"></ImageView>

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="false"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_marginBottom="15dp"></ImageView>

            </LinearLayout>

            <TextView
                android:id="@+id/nomSpecialite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:maxWidth="280dp"
                android:width="280dp"
                android:layout_marginTop="8dp"
                android:text="nomSpecialite"
                android:layout_column="0" />

            <TextView
                android:id="@+id/libellePresentation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:maxWidth="280dp"
                android:layout_marginTop="8dp"
                android:text="libellePresentation"
                android:layout_column="0" />


            <GridLayout
                android:layout_column="0"
                android:columnCount="2"
                android:layout_marginTop="8dp"
                android:layout_gravity="fill_horizontal">


                <TextView
                    android:id="@+id/labelExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiration: "
                    android:layout_column="0" />

                <TextView
                    android:id="@+id/dateExpiration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05/2020"
                    android:layout_column="1" />

            </GridLayout>

            <GridLayout
                android:layout_column="0"
                android:columnCount="2"
                android:layout_marginTop="8dp"
                android:layout_gravity="fill_horizontal">

                <TextView
                    android:id="@+id/labelLot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lot N°"
                    android:layout_column="0" />

                <TextView
                    android:id="@+id/lot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HF52521"
                    android:layout_column="1" />

            </GridLayout>

            <TextView
                android:id="@+id/conditionPrescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginTop="8dp"
                android:text="conditionPrescription" />

            <Button
                android:id="@+id/notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/zxing_transparent"
                android:onClick="voirNotice"
                android:text="Voir la notice"
                android:layout_column="0" />

        </GridLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/interractions_card"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="1dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/interactions"
                    android:textSize="12sp"
                    android:layout_alignParentLeft="true" />
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:text="ok"/>-->
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#D3D3D3" />

            <TextView
                android:id="@+id/empty_interactions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/empty_interaction"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/liste_interactions"
                android:scrollbars="none">

            </ListView>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/substances_card"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="1dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/substances"
                    android:textSize="12sp"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/refDosage" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#D3D3D3" />

            <TextView
                android:id="@+id/empty_substances"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/empty_substance"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/liste_substances"
                android:scrollbars="none">

            </ListView>


        </LinearLayout>


    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/voirRCP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="voirRCP"
        android:text="Voir le résumé des caractéristique du produit"
        android:layout_column="0" />

    <TextView
        android:id="@+id/formePharma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="formePharma"
        android:layout_column="0" />
</LinearLayout>
